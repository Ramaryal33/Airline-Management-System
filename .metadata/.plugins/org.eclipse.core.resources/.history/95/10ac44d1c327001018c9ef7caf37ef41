package com.airline.staff.service;

import com.airline.util.EmployeeDAO;
import com.airline.staff.model.Employee;
import com.airline.util.PasswordUtil;

public class EmployeeService {

    private final EmployeeDAO employeeDAO = new EmployeeDAO();

    /**
     * Login method for employees using username and plain password.
     * @param username The username of the employee.
     * @param plainPassword The plain text password entered by the user.
     * @return Employee object if login successful, otherwise null.
     */
    public Employee login(String username, String plainPassword) {
        try {
            Employee employee = employeeDAO.getEmployeeByUsername(username);

            if (employee != null && PasswordUtil.checkPassword(plainPassword, employee.getPasswordHash())) {
                return employee;
            }
        } catch (Exception e) {
            e.printStackTrace(); // For debugging only â€” handle properly in production
        }
        return null; // login failed
    }

    // You can also add other Employee-related service methods here (CRUD, etc.)
}