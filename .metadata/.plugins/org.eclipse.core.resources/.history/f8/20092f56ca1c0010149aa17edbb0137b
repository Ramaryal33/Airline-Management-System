package com.airline.controller;

import com.airline.model.User;
// You’ll need to import services to get this data (use dummy data for now)
import jakarta.servlet.ServletException;
import jakarta.servlet.annotation.WebServlet;
import jakarta.servlet.http.*;

import java.io.IOException;
import java.util.*;

@SuppressWarnings("serial")
@WebServlet("/passengerDashboard")
public class PassengerDashboardController extends HttpServlet {

    @Override
    protected void doGet(HttpServletRequest req, HttpServletResponse resp)
            throws ServletException, IOException {
        
        HttpSession session = req.getSession(false);
        if (session == null || session.getAttribute("user") == null) {
            resp.sendRedirect(req.getContextPath() + "/login");
            return;
        }

        // Get the logged-in user
        User user = (User) session.getAttribute("user");

        // ✅ Set attributes required by the JSP
        req.setAttribute("user", user);
        req.setAttribute("bookingCount", 3);
        req.setAttribute("lastBookingDate", "2025-04-01");
        req.setAttribute("flightCount", 5);
        req.setAttribute("nextFlightDate", "2025-04-20");
        req.setAttribute("waitingListCount", 1);
        req.setAttribute("lastUpdateDate", "2025-04-10");
        req.setAttribute("loyaltyPoints", 4200);
        req.setAttribute("membershipTier", "Gold");

        // Dummy upcoming flights list
        List<Map<String, String>> flights = new ArrayList<>();
        Map<String, String> flight = new HashMap<>();
        flight.put("flightNumber", "DA123");
        flight.put("origin", "New York");
        flight.put("destination", "London");
        flight.put("departureTime", "2025-04-20 08:00 AM");
        flight.put("id", "101");
        flights.add(flight);

        req.setAttribute("flights", flights);

        // ✅ Forward to JSP
        req.getRequestDispatcher("/WEB-INF/page/passengerDashboard.jsp").forward(req, resp);
    }
}
