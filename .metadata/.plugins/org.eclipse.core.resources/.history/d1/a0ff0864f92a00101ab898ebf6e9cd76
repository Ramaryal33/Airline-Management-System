                        <label>Email:</label>
                        <input type="email" name="email" value="${staff.email}" required>
                    </div>

                    <div class="form-group">
                        <label>Phone:</label>
                        <input type="text" name="phone" value="${staff.phone}">
                    </div>

                    <div class="form-group">
                        <label>Position:</label>
                        <input type="text" name="position" value="${staff.position}">
                    </div>

                    <div class="form-group">
