package com.airline.controller;

import java.io.IOException;

import com.airline.model.User;
import jakarta.servlet.ServletException;
import jakarta.servlet.annotation.WebServlet;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;
import jakarta.servlet.http.HttpSession;

@SuppressWarnings("serial")
@WebServlet("/passengerDashboard")
public class PassengerDashboardController extends HttpServlet {

    @Override
    protected void doGet(HttpServletRequest req, HttpServletResponse resp)
            throws ServletException, IOException {
        
        // Get current session or redirect if not logged in
        HttpSession session = req.getSession(false);
        if (session == null || session.getAttribute("user") == null) {
            System.out.println("Unauthorized access to passenger dashboard. Redirecting to login...");
            resp.sendRedirect(req.getContextPath() + "/login");
            return;
        }

        // Optional: Get user info for debugging/logging
        User user = (User) session.getAttribute("user");
        System.out.println("Passenger dashboard loaded for: " + user.getEmail());

        // Set any attributes you need
        req.setAttribute("cssPath", req.getContextPath() + "/css/dashboard.css");

        // Forward to JSP
        req.getRequestDispatcher("/WEB-INF/page/passengerDashboard.jsp").forward(req, resp);
    }

    @Override
    protected void doPost(HttpServletRequest req, HttpServletResponse resp)
            throws ServletException, IOException {
        doGet(req, resp);
    }
}
