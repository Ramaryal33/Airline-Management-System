package com.airline.staff.service;

import com.airline.util.EmployeeDAO;
import com.airline.staff.model.Employee;
import com.airline.util.PasswordUtil;

public class EmployeeService {
    private final EmployeeDAO employeeDAO = new EmployeeDAO();

    public Employee login(String username, String plainPassword) throws Exception {
        Employee emp = employeeDAO.getEmployeeByUsername(username);
        if (emp != null && PasswordUtil.checkPassword(plainPassword, emp.getPasswordHash())) {
            return emp;
        }
        return null;
    }
}
