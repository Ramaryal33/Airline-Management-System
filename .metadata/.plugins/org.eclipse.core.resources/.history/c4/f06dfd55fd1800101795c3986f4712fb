package com.airlines.services;

import com.airlines.config.DbConfig;
import com.airlines.models.UserModel;
import com.airlines.utils.PasswordUtil;
import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;

public class LoginService {
    public UserModel authenticateUser(String email, String password) {
        String sql = "SELECT * FROM users WHERE email = ?";
        UserModel user = null;
        
        try (Connection conn = DbConfig.getConnection();
             PreparedStatement stmt = conn.prepareStatement(sql)) {
            
            stmt.setString(1, email);
            ResultSet rs = stmt.executeQuery();
            
            if (rs.next()) {
                String storedPassword = rs.getString("password");
                
                if (com.airline.util.PasswordUtil.verifyPassword(password, storedPassword)) {
                    user = new UserModel();
                    user.setUserId(rs.getInt("user_id"));
                    user.setFullName(rs.getString("full_name"));
                    user.setEmail(rs.getString("email"));
                    user.setImagePath(rs.getString("image_path"));
                    user.setProgramId(rs.getInt("program_id"));
                }
            }
            
        } catch (Exception e) {
            e.printStackTrace();
        }
        
        return user;
    }
}